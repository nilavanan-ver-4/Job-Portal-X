<body>
    <div class="container">
        <div class="header">
            <h1 class="welcome">Welcome, {{ session['username'] }}</h1>
            <a href="{{ url_for('logout') }}" class="button">Logout</a>
        </div>
        <h2>Your Job Applications</h2>
        {% if applications %}
            <table>
                <thead>
                    <tr>
                        <th>Category</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Age</th>
                        <th>Sex</th>
                        <th>Address</th>
                        <th>Highest Qualification</th>
                        <th>Experience</th>
                        <th>Skills</th>
                        <th>Applied On</th>
                        <th>Processing</th>
                        <th>Result</th>
                    </tr>
                </thead>
                <tbody>
                    {% for app in applications %}
                        <tr>
                            <td>{{ app.category_name }}</td>
                            <td>{{ app.name }}</td>
                            <td>{{ app.email }}</td>
                            <td>{{ app.phone }}</td>
                            <td>{{ app.age }}</td>
                            <td>{{ app.sex }}</td>
                            <td>{{ app.address }}</td>
                            <td>{{ app.highest_qualification }}</td>
                            <td>{{ app.experience }}</td>
                            <td>{{ app.skills }}</td>
                            <td>{{ app.applied_on }}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% else %}
            <p>No job applications found.</p>
        {% endif %}
    </div>
</body>
